{
  "compilerOptions": {
    "target": "es2020",

    "module": "commonjs",
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/events/keys.ts"],
  "exclude": ["node_modules"]
}
